---
import Base from "../layouts/Base.astro";
---

<Base GenerateNavigation={false}>
	<section
		class="bar:h-vhwfn h-vhwf flex flex-grow flex-col justify-center items-center"
	>
		<div id="adobe-dc-view"></div>

		<script src="https://documentservices.adobe.com/view-sdk/viewer.js"
		></script>

		<script type="text/javascript">
			document.addEventListener("adobe_dc_view_sdk.ready", function () {
				var adobeDCView = new AdobeDC.View({
					clientId: "3b1a0743813f471a96dd317e76e88903",
					divId: "adobe-dc-view",
				});

				adobeDCView.previewFile(
					{
						content: {
							location: {
								url: "https://https://ys-raptor.github.io/Portfolio/resume.pdf",
							},
						},

						metaData: { fileName: "resume.pdf" },
					},
					{
						embedMode: "FULL_WINDOW",
						showAnnotationTools: false,
						showDownloadPDF: true,
						showPrintPDF: false,
						showZoomControls: true,
						defaultViewMode: "FIT_WIDTH",
						enableLinearization: true,
						enableFormFilling: false,
						showThumbnails: false,
						showBookmarks: false,
					}
				);
			});
		</script>
	</section>
</Base>
