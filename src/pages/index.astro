---
import AboutMe from "../components/AboutMe";
import Contact from "../components/Contact";
import Projects from "../components/Projects";
import Hero from "../components/Hero";
import Base from "../layouts/Base.astro";
import { getCollection } from "astro:content";

const projectsInfoResponse = await getCollection("projects");
---

<Base>
	<section
		class="h-fit flex flex-grow flex-col bar:min-h-vhw bar:scroll-mt-[76px] min-h-screen"
		id="home"
	>
		<Hero client:only />
	</section>
	<section
		class="h-fit flex flex-grow flex-col bar:min-h-vhw bar:scroll-mt-[76px] min-h-screen"
		id="about"
	>
		<AboutMe client:only />
	</section>
	<section
		class="h-screen bar:h-vhw flex flex-col flex-grow bar:scroll-mt-[76px]"
		id="my-portfolio"
	>
		<Projects client:only projectsInfoResponse={projectsInfoResponse} />
	</section>
	<section
		class="h-fit flex flex-grow flex-col bar:min-h-vhwfn bar:scroll-mt-[76px] min-h-vhwf"
		id="contacts"
	>
		<Contact client:only />
	</section>
</Base>
