---
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav";
import Background from "../components/background";

// Background
// Primary
// Cyan700
// Teal 600
// Green 500
// Lime 300
// Rose 200
// Slate 50
---

<html
	lang="en"
	class="snap-proximity snap-y motion-reduce:snap-none scroll-smooth text-sm xs:ext-base 3xl:text-lg 3xl:font-semibold"
>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/Portfolio/icon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Yashan | Engineer & Developer</title>
	</head>
	<body class="relative overflow-x-hidden">
		<Nav client:load />
		<Background fps={12} scale={7} client:load />
		<div class="bar:ml-16 font-mono">
			<slot />
		</div>
		<Footer />
	</body>
</html>

<style is:global>
	/* Make Chrome scrollbar identical to firefox scrollbar */
	::-webkit-scrollbar {
		width: 0.2em;
		height: 0.2em;
		background-color: transparent;
	}

	::-webkit-scrollbar-thumb {
		background-color: #858585;
		border-radius: 0.5em;
	}

	::-webkit-scrollbar-track {
		-webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
		border-radius: 0.5em;
		background-color: transparent;
		margin-top: 5px;
		margin-bottom: 5px;
	}

	::-webkit-scrollbar-thumb:hover {
		background-color: #fff;
	}

	::-webkit-scrollbar-corner {
		background-color: transparent;
	}

	::-webkit-scrollbar-button {
		display: none;
	}
</style>
